<!doctype html>
<html>

<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="themes/default.css" rel="stylesheet">
    <link href="utils.css" rel="stylesheet">

    <%- analyticsScript %>
</head>

<body>
    <div id="img_container">
        <button id="preview_play_btn" class="<%= lastPlayingState?.meta?.preview ? 'can_preview' : '' %>">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="lucide lucide-volume-x overlay_icon" id="preview_play_btn_muteicon">
                <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5" />
                <line x1="22" x2="16" y1="9" y2="15" />
                <line x1="16" x2="22" y1="9" y2="15" />
            </svg>

            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="lucide lucide-volume-2 overlay_icon" id="preview_play_btn_soundicon" style="display: none;">
                <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5" />
                <path d="M15.54 8.46a5 5 0 0 1 0 7.07" />
                <path d="M19.07 4.93a10 10 0 0 1 0 14.14" />
            </svg>
        </button>

        <svg id="img_pause_icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
            class="feather feather-pause overlay_icon"
            style="opacity: <%= lastPlayingState?.progress?.playing ? '0' : '1' %>;">
            <rect x="6" y="4" width="4" height="16"></rect>
            <rect x="14" y="4" width="4" height="16"></rect>
        </svg>
        <a href="#" target="_blank" id="img_song_link">
            <img id="img_song" src="<%= lastPlayingState?.meta?.image || 'https://i.imgur.com/5nltiUd.png' %>"
                style="display: <%= lastPlayingState?.meta?.image ? 'block' : 'none' %>;" />
        </a>
        <svg id="img_placeholder" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
            class="feather feather-music">
            <path d="M9 18V5l12-2v13"></path>
            <circle cx="6" cy="18" r="3"></circle>
            <circle cx="18" cy="16" r="3"></circle>
        </svg>
    </div>

    <div id="song_info">
        <a href="#" target="_blank" id="song_info_strings">
            <h2 id="song_title">
                <%= lastPlayingState?.title || 'No playing info' %>
            </h2>
            <span id="song_artist">
                <%= lastPlayingState?.artist || 'No player is currently active' %>
            </span>
            <span id="song_album">
                <%= lastPlayingState?.album || '' %>
            </span>
        </a>

        <div id="progressbar_div">
            <div id="progressbar_times">
                <small id="progressbar_current_time">0:00</small>
                <small id="progressbar_full_duration">0:00</small>
            </div>
            <div id="progressbar">
                <div id="progressbar_current_bar"></div>
            </div>
        </div>
    </div>

    <script src="widget.js"></script>
</body>

</html>